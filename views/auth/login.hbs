<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Login</h1>
    <form method="POST" action="/login">
      <div class="form-group">
        <label for="formGroupExampleInput">Name</label>
        <input value="{{user.username}}" name="username" type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="Name">
        {{#if errors.username}}
        <div class="invalid-feedback">{{errors.username}}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Password</label>
        <input value="{{user.password}}" name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password">
        {{#if errors.password}}
        <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>